<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="app.pankaj.googleplacesusingretrofit.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/et_login_email"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:hint="Username or Email"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColorHint="#5e6266"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_person"
            android:background="@drawable/bg_edittext"
            />

        <EditText
            android:id="@+id/et_login_password"
            android:textColorHint="#5e6266"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_edittext"
            android:layout_marginTop="30dp"
            android:hint="EnterPassword"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_lock"
            />

        <Button
            android:id="@+id/et_login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:background="#006666"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tv_register_new"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register_yourself"
            android:textSize="20sp"
            android:textColor="#2d8659"
            android:textStyle="bold|italic"
            android:layout_gravity="center"
            />









    </LinearLayout>

</ScrollView>


